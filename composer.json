{
	"name": "mediawiki/phan-performance-check-plugin",
	"description": "A Phan plugin to do some (micro-)performance checks",
	"keywords": [
		"php",
		"static",
		"analyzer",
		"phan",
		"performance",
		"optimization"
	],
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Daimona",
			"homepage": "https://it.wikipedia.org/wiki/User:Daimona_Eaytoy",
			"role": "Developer"
		}
	],
	"require": {
		"phan/phan": "2.1.0",
		"php": "^7.1.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "26.0.0",
		"mediawiki/minus-x": "0.3.1",
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"jakub-onderka/php-console-highlighter": "0.3.2",
		"phpunit/phpunit": "^7.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"composer phpcs",
			"composer minus-x",
			"./tests/run-phan-on-plugin.sh -p",
			"phpunit"
		],
		"phpcs": "phpcs -p -s",
		"minus-x": "minus-x check .",
		"phan-for-plugin": "./tests/run-phan-on-plugin.sh -p",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
